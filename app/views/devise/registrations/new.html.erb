<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="card shadow-lg p-4">
        <h2 class="text-center mb-4">Cadastro</h2>

        <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "needs-validation" }) do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>

          <div class="mb-3">
            <%= f.label :name, 'Nome Completo', class: "form-label" %>
            <%= f.text_field :name, class: "form-control", placeholder: "Digite seu nome", required: true %>
          </div>

          <div class="mb-3">
            <%= f.label :cpf, 'CPF', class: "form-label" %>
            <%= f.text_field :cpf, class: "form-control", placeholder: "Digite seu CPF", required: true %>
          </div>

          <div class="mb-3">
            <%= f.label :email, 'E-mail', class: "form-label" %>
            <%= f.email_field :email, class: "form-control", placeholder: "Digite seu e-mail", required: true, autofocus: true, autocomplete: "email" %>
          </div>

          <div class="mb-3">
            <%= f.label :password, 'Senha', class: "form-label" %>
            <% if @minimum_password_length %>
              <em>(mínimo de <%= @minimum_password_length %> caracteres)</em>
            <% end %>
            <%= f.password_field :password, data: { password_visibility_target: "password" }, class: "form-control", placeholder: "Digite sua senha", required: true, autocomplete: "new-password" %>
            <button type="button" class="btn btn-outline-secondary" data-action="password-visibility#toggle">
              👁 Mostrar
            </button>
          </div>

          <div class="mb-3">
            <%= f.label :password_confirmation, 'Confirme sua Senha', class: "form-label" %>
            <%= f.password_field :password_confirmation, data: { password_visibility_target: "password" }, class: "form-control", placeholder: "Confirme sua senha", required: true, autocomplete: "new-password" %>
            <button type="button" class="btn btn-outline-secondary" data-action="password-visibility#toggle">
              👁 Mostrar
            </button>
          </div>

          <div class="d-grid gap-2">
            <%= f.submit 'Cadastrar', class: "btn btn-success btn-lg" %>
          </div>
        <% end %>

        <div class="text-center mt-3">
          <p>Já tem uma conta? <%= link_to "Faça login", new_user_session_path %></p>
        </div>
      </div>
    </div>
  </div>
</div>
